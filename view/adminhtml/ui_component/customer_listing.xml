<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
   <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="approved">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected customers?</message>
                        <title translate="true">Approval items</title>
                    </confirm>
                    <url path="CustomerApproval/index/massApproved"/>
                    <type>approved</type>
                    <label translate="true">Approved</label>
                </settings>
            </action>
       <action name="reject">
           <settings>
               <confirm>
                   <message translate="true">Are you sure you want to reject the selected customers?</message>
                   <title translate="true">Reject items</title>
               </confirm>
               <url path="CustomerApproval/index/massReject"/>
               <type>reject</type>
               <label translate="true">Reject</label>
           </settings>
       </action>
        </massaction>
    </listingToolbar>
</listing>
